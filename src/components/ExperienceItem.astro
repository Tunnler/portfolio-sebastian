---
interface Props {
  title: string;
  company: string;
  description: string;
  link?: string;
  date: string;
}

const { title, company, description, date } = Astro.props;
---

<div
  class="relative ml-12 pb-12 grid before:absolute before:left-[-33px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-1 md:space-x-0"
>
  <div class="">
    <div class="top-0">
      <span class="text-purple-400 -left-[42px] absolute rounded-full text-5xl"
        >&bull;</span
      >

      <h3 class="text-xl font-bold text-purple-400">{title}</h3>
      <h4 class="font-semibold text-lg text-gray-600 dark:text-white">
        {company}
      </h4>
      <time class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80"
        >{date}</time
      >
      <div
        class="mb-4 mt-3 font-normal text-gray-600 dark:text-gray-300 text-base text-pretty"
      >
        <ul class="list-disc list-outside ">
          {
            description.split('\n').map((item) => (
              <li class="mb-2">{item.trim()}</li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</div>